{
  "name": "@ficusjs/components",
  "version": "1.0.0-alpha.19",
  "description": "A library of UI components built for FicusJS ",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist build",
    "build": "run-p build:*",
    "build:components": "node scripts/build-components.js",
    "build:css": "node scripts/build-css.js",
    "build:sass": "node scripts/build-sass.js",
    "build:sass-dist": "node scripts/build-sass.js --output-dir=dist",
    "build:dist": "run-p build:dist:*",
    "build:dist:js": "node scripts/build-components.js --output-dir=dist",
    "build:dist:css": "node scripts/build-css.js --output-dir=dist",
    "build:docs": "npm run sass && cross-env NODE_ENV=production eleventy --input=src --output=build",
    "predev": "rimraf tmp && npm run sass",
    "dev": "run-p watch:*",
    "watch:src": "live-server --watch=src --port=8888 --no-browser --cors src",
    "watch:tmp": "live-server --watch=tmp --port=8889 --no-browser --cors tmp",
    "watch:docs": "cross-env NODE_ENV=development eleventy --input=src --output=tmp --serve",
    "watch:sass": "chokidar \"src/**/*.scss\" -c \"run-p sass\"",
    "sass": "run-p sass:tmp:*",
    "sass:tmp:components": "node scripts/build-sass.js --output-dir=tmp",
    "lint": "run-p lint:*",
    "lint:js": "standard \"src/**/*.js\"",
    "lint:sass": "stylelint \"src/scss/**/*.scss\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ficusjs/ficusjs-components.git"
  },
  "keywords": [
    "ficusjs",
    "frontend",
    "web-components",
    "ui-toolkit",
    "custom-elements"
  ],
  "author": "Matt Levy",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "0.12.1",
    "@11ty/eleventy-navigation": "0.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "3.1.0",
    "@ficusjs/styles": "1.0.0-alpha.27",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-replace": "2.4.2",
    "chokidar-cli": "2.1.0",
    "clean-css": "5.1.2",
    "cross-env": "7.0.3",
    "eleventy-plugin-toc": "1.1.0",
    "glob-all": "3.2.1",
    "html-minifier": "4.0.0",
    "live-server": "1.2.1",
    "log-symbols": "4.1.0",
    "markdown-it": "12.0.6",
    "markdown-it-anchor": "7.1.0",
    "markdown-it-emoji": "2.0.0",
    "markdown-it-table-of-contents": "0.5.2",
    "markdown-to-txt": "1.0.1",
    "minify-html-literals": "1.3.5",
    "mkdirp": "1.0.4",
    "npm-run-all": "4.1.5",
    "postcss-cli": "8.3.1",
    "rimraf": "3.0.2",
    "rollup": "2.45.2",
    "rollup-plugin-minify-html-literals": "1.2.6",
    "rollup-plugin-terser": "7.0.2",
    "sass": "1.32.11",
    "slugify": "1.5.0",
    "standard": "16.0.3",
    "stylelint": "13.12.0",
    "stylelint-config-standard": "21.0.0",
    "stylelint-scss": "3.19.0",
    "yargs": "16.2.0"
  },
  "exports": {
    ".": {
      "import": "./dist/components/loader/index.js"
    },
    "./loader": {
      "import": "./dist/components/loader/index.js"
    },
    "./custom-elements/accordion": {
      "import": "./dist/components/custom-elements/accordion/index.js"
    },
    "./custom-elements/dropdown": {
      "import": "./dist/components/custom-elements/dropdown/index.js"
    },
    "./custom-elements/form": {
      "import": "./dist/components/custom-elements/form/index.js"
    },
    "./custom-elements/form-input": {
      "import": "./dist/components/custom-elements/form-input/index.js"
    },
    "./custom-elements/form-select": {
      "import": "./dist/components/custom-elements/form-select/index.js"
    },
    "./custom-elements/form-textarea": {
      "import": "./dist/components/custom-elements/form-textarea/index.js"
    },
    "./custom-elements/modal": {
      "import": "./dist/components/custom-elements/modal/index.js"
    },
    "./custom-elements/navbar": {
      "import": "./dist/components/custom-elements/navbar/index.js"
    },
    "./custom-elements/pagination": {
      "import": "./dist/components/custom-elements/pagination/index.js"
    },
    "./custom-elements/sheet": {
      "import": "./dist/components/custom-elements/sheet/index.js"
    },
    "./custom-elements/tabs": {
      "import": "./dist/components/custom-elements/tabs/index.js"
    }
  },
  "dependencies": {}
}
