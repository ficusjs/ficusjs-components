{
  "name": "@ficusjs/components-storybook",
  "version": "0.1.0",
  "description": "Storybook for FicusJS components",
  "scripts": {
    "start": "run-p start:*",
    "start:storybook": "start-storybook -p 31337",
    "start:cypress": "cypress open",
    "build-storybook": "build-storybook",
    "test": "start-server-and-test ci:storybook http://localhost:31337 test:unit",
    "ci:storybook": "start-storybook -p 31337 --ci",
    "test:all": "run-s test:*",
    "test:a11y": "cypress run --spec \"./cypress/e2e/a11y/**/*.cy.js\"",
    "test:unit": "cypress run --spec \"./cypress/e2e/unit/**/*.cy.js\""
  },
  "keywords": [
    "ficusjs",
    "storybook"
  ],
  "author": "Matt Levy <matt@ficusjs.org>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.4",
    "@storybook/addon-a11y": "^6.5.12",
    "@storybook/addon-actions": "^6.5.12",
    "@storybook/addon-docs": "^6.5.12",
    "@storybook/addon-essentials": "^6.5.12",
    "@storybook/addon-links": "^6.5.12",
    "@storybook/addon-viewport": "6.5.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/web-components": "^6.5.12",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "cypress": "^10.10.0",
    "ficusjs": "^5.4.0",
    "lit-html": "^2.4.0",
    "npm-run-all": "^4.1.5",
    "raw-loader": "^4.0.2",
    "sass": "^1.55.0",
    "sass-loader": "^13.1.0",
    "style-loader": "^3.3.1",
    "cypress-axe": "^1.0.0",
    "semver": "^7.3.8",
    "standard": "^16.0.4",
    "start-server-and-test": "^1.14.0",
    "storybook-theme-toggle": "^0.1.2"
  }
}
